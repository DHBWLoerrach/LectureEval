{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "tsc-watch",
            "type": "shell",
            "command": "tsc",
            "args": [
                "--watch"
            ],
            "isBackground": true,
            "problemMatcher": [
                "$tsc-watch"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "focus": false
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
        }
    ]
}